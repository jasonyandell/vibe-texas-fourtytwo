# Texas 42 Backend - Environment Configuration Template
# Copy this file to .env and adjust values as needed

# Server Configuration
NODE_ENV=development
PORT=4201
HOST=0.0.0.0
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql://texas42_user:texas42_password@localhost:5433/texas42_dev
POSTGRES_DB=texas42_dev
POSTGRES_USER=texas42_user
POSTGRES_PASSWORD=texas42_password
DATABASE_PORT=5433

# Redis Configuration (for sessions and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Security Configuration
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=http://localhost:4200

# Game Configuration
GAME_SESSION_TIMEOUT=3600000
MAX_CONCURRENT_GAMES=100
MAX_PLAYERS_PER_GAME=4
GAME_CLEANUP_INTERVAL=300000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# Development Configuration
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_REQUEST_LOGGING=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://texas42_user:texas42_password@localhost:5433/texas42_test
TEST_REDIS_URL=redis://localhost:6379/1
