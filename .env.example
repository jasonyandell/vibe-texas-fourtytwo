# Texas 42 Web Game - Environment Configuration Template
# Copy this file to .env and adjust values as needed

# Port Configuration
# These ports are chosen to avoid common conflicts
FRONTEND_PORT=4200
BACKEND_PORT=4201
DATABASE_PORT=5433

# Database Configuration
POSTGRES_DB=texas42_dev
POSTGRES_USER=texas42_user
POSTGRES_PASSWORD=texas42_password
DATABASE_URL=postgresql://texas42_user:texas42_password@localhost:5433/texas42_dev

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Game Configuration
GAME_SESSION_TIMEOUT=3600000
MAX_CONCURRENT_GAMES=100

# Security (generate secure values for production)
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# Optional: Override Docker Compose project name
COMPOSE_PROJECT_NAME=texas42
