# Texas 42 Frontend - Environment Configuration Template
# Copy this file to .env and adjust values as needed

# Development Server Configuration
FRONTEND_PORT=4200
VITE_API_URL=http://localhost:4201
VITE_WS_URL=ws://localhost:4201

# Game Configuration
VITE_GAME_SESSION_TIMEOUT=3600000
VITE_MAX_PLAYERS_PER_GAME=4
VITE_ENABLE_GAME_SOUNDS=true
VITE_ENABLE_ANIMATIONS=true

# Development Features
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_DEV_TOOLS=true
VITE_LOG_LEVEL=debug

# Feature Flags (for future use)
VITE_ENABLE_SPECTATOR_MODE=false
VITE_ENABLE_TOURNAMENT_MODE=false
VITE_ENABLE_AI_PLAYERS=false

# Analytics (optional)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=

# Error Reporting (optional)
VITE_ERROR_REPORTING_ENABLED=false
VITE_SENTRY_DSN=
