{
  "name": "fourtytwo",
  "version": "1.0.0",
  "description": "Texas 42 Web Game - Authentic domino game implementation",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "npm run check-prereqs && npm run setup-env && docker-compose up --build",
    "develop": "npm run check-prereqs && npm run setup-env && concurrently \"docker-compose -f docker-compose.db.yml up\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "tdd": "npm run check-prereqs && npm run setup-env && concurrently \"npm run test:backend:watch\" \"npm run test:frontend:watch\"",
    "dev:frontend": "npm run --workspace=frontend dev",
    "dev:backend": "npm run --workspace=backend dev",
    "test:frontend": "npm run --workspace=frontend test",
    "test:backend": "npm run --workspace=backend test",
    "test:frontend:watch": "npm run --workspace=frontend test:watch",
    "test:backend:watch": "npm run --workspace=backend test:watch",
    "test:e2e": "npm run --workspace=frontend test:e2e",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "npm run --workspace=frontend lint",
    "lint:backend": "npm run --workspace=backend lint",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:fix:frontend": "npm run --workspace=frontend lint:fix",
    "lint:fix:backend": "npm run --workspace=backend lint:fix",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "npm run --workspace=frontend build",
    "build:backend": "npm run --workspace=backend build",
    "check-prereqs": "node scripts/check-prereqs.js",
    "setup-env": "node scripts/setup-env.js",
    "verify-setup": "node scripts/verify-setup.js",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "npm run --workspace=frontend clean",
    "clean:backend": "npm run --workspace=backend clean",
    "cleanup": "node scripts/cleanup.js",
    "setup:github-projects": "node scripts/setup-github-projects.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "texas-42",
    "domino",
    "game",
    "web",
    "typescript",
    "react",
    "fastify"
  ],
  "author": "Texas 42 Development Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/jwt": "^9.1.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0",
    "nanoid": "^5.0.9",
    "pg": "^8.13.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript-eslint": "^8.37.0",
    "zod": "^3.24.1"
  }
}
